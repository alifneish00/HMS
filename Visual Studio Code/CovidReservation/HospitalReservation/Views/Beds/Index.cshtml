@model IEnumerable<DataModel.Bed>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
@if (ViewBag.UserObject.IsAdmin || (ViewBag.UserObject.Hospital != null))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Discription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Room.Number)
                </td>
                @if (ViewBag.UserObject.IsAdmin || (ViewBag.UserObject.Hospital != null && ViewBag.UserObject.HospitalId.Equals(item.Room.HospitalId)))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Number">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Number">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Number">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
